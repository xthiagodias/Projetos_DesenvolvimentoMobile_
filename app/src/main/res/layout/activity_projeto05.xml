<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Projeto05">

    <TextView
            android:text="Calcular e Imprimir media do Aluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textColor="@android:color/black" android:textSize="18sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="Dados do Aluno:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14" android:textColor="@android:color/black"
            android:textSize="14sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout5"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="29dp" app:layout_constraintBottom_toTopOf="@+id/textView16"
            android:layout_marginLeft="16dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do Aluno" android:id="@+id/inputNome"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
            android:text="Avaliacoes: (NOTAS)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16" android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout6" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout6"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout6"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="196dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="16dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Primeira Avaliacao" android:id="@+id/inputAV1"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout7"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout6" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="16dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Segunda Avaliacao" android:id="@+id/inputAV2"/>
    </android.support.design.widget.TextInputLayout>
    <Button
            android:text="CALCULAR MEDIA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btCalcularMedia"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout7"/>
    <TextView
            android:text="NOME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idNome"
            android:textColor="@android:color/holo_blue_dark" android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginTop="8dp" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="91dp"
            app:layout_constraintTop_toBottomOf="@+id/btCalcularMedia"/>
    <TextView
            android:text="MEDIA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idMedia" android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/idNome"/>
    <TextView
            android:text="STATUS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idStatus"
            android:textColor="@android:color/holo_blue_dark" android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="36dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/idMedia" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>